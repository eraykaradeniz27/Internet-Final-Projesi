@model IEnumerable<WVO.Models.Yonetim>
@{
    <div class="text-center">
        <h1 style="background-color:LightBlue;" class="display-4">Yönetim listele</h1>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.Gorevi)
            </th>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.YonetimTip11)
            </th>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.YonetimTip12)
            </th>
            <th style="background-color:#808080;">
                @Html.DisplayNameFor(model => model.YonetimTip13)
            </th>
            <th style="background-color:#adff2f">
                @Html.DisplayNameFor(model => model.Controler)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.Gorevi)
                </td>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.YonetimTip11)
                </td>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.YonetimTip12)
                </td>
                <td style="background-color:#9d9dff">
                    @Html.DisplayFor(modelItem => item.YonetimTip13)
                </td>
                <td style="background-color:#adff2f">
                    @Html.ActionLink("Guncelle", "YonetimDetay", new {  id=item.Id  })|
                    @Html.ActionLink("Detalist", "YonetimDetay", new {  id=item.Id  })|
                    @Html.ActionLink("Sil", "YonetimSil", new {  id=item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>